<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="simple.blog.app.entity.RecordEntity" table="record" schema="forum_db">
        <id name="id">
            <column name="id" sql-type="int(10) unsigned"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="text">
            <column name="text" sql-type="longtext"/>
        </property>
        <property name="date">
            <column name="date" sql-type="datetime"/>
        </property>
    </class>
</hibernate-mapping>